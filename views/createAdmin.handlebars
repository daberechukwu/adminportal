<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="../css/dashboard.css">
    <link rel="stylesheet" href="../css/form.css">

	<title>AdminHub</title>
</head>
<body>


	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="" class="brand">
			<i class='bx bxs-smile'></i>
			<span class="text">PPLE ADMIN</span>
		</a>
		<ul class="side-menu top">
			<li>
				<a href="/dashboard" id="dashboard">
					<i class='bx bxs-dashboard' ></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a href="/users" id="users">
					<i class='bx bxs-group' ></i>
					<span class="text">Users</span>
				</a>
			</li>
			<li>
				<a href="/create-users">
					<i class='bx bxs-group' ></i>
					<span class="text">create User</span>
				</a>
			</li>
			<li>
				<a href="/create-events">
					<i class='bx bxs-calendar-check' ></i>
					<span class="text">Create Events</span>
				</a>
			</li>
			<li class="active">
				<a href="/create-admin">
					<i class='bx bxs-doughnut-chart' ></i>
					<span class="text">Create Admin</span>
				</a>
			</li>
			<li>
				<a href="#">
					<i class='bx bxs-doughnut-chart' ></i>
					<span class="text">Analytics</span>
				</a>
			</li>
			<li>
				<a href="#">
					<i class='bx bxs-message-dots' ></i>
					<span class="text">Message</span>
				</a>
			</li>
			<li>
				<a href="#">
					<i class='bx bxs-group' ></i>
					<span class="text">Admins</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="#">
					<i class='bx bxs-cog' ></i>
					<span class="text">Settings</span>
				</a>
			</li>
			<li>
				<a href="/logout" class="logout">
					<i class='bx bxs-log-out-circle' ></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu' ></i>
			<a href="#" class="nav-link">Categories</a>
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="notification">
				<i class='bx bxs-bell' ></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="img/people.png">
			</a>
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
           <div id="container">
    <!-- Form Wrap Start -->
     <div class="form-wrap">
        <h1>Create Admin</h1>
        <p>For Admin use only!</p>
        {{#if message}}
       <div style="color: green;">{{message}}</div>
       {{/if}}

      {{#if error}}
       <div style="color: red;">{{error}}</div>
        {{/if}}
        <!-- Form Start -->
        <form method="POST" action="/create-admin">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" name="email" id="email" required>
            </div>
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="name" name="name" id="name" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" name="password" id="password" required>
            </div>
            <div class="form-group">
                <label for="role">Role:</label>
                <input type="role" name="role" id="role" required>
            </div>
            <button type="submit">Create Admin</button>
        </form>
        <!-- Form Close -->
    </div>
    <div id="message"></div>
  <!-- Form Close -->
</div>


        </main>
			
	</section>
	<!-- CONTENT -->
	

	<script src="../js/script.js"></script>
</body>
</html>